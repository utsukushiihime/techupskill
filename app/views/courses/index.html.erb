<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td style="width: 30px;"><%= link_to '', course, class: 'far fa-eye text-white btn btn-sm btn-dark rounded' %></td>
        <td style="width: 30px;"><%= link_to '', edit_course_path(course), class: 'fas fa-edit text-white btn btn-sm btn-warning rounded' %></td>
        <td style="width: 30px;"><%= link_to '', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'far fa-trash-alt text-white btn btn-sm btn-danger rounded' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-dark btn-sm' %>
